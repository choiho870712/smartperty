<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_object_list_title"
            style="@style/text_normal_black_16sp"
            android:layout_width="0dp"
            android:layout_marginStart="16dp"
            android:text="2樓215"
            app:layout_constraintBottom_toTopOf="@+id/text_object_list_address"
            app:layout_constraintEnd_toStartOf="@+id/image_object_folder_add"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_object_list_address"
            style="@style/text_normal_black_14sp"
            android:layout_width="0dp"
            android:layout_marginStart="16dp"
            android:text="台北市大安街"
            app:layout_constraintBottom_toTopOf="@+id/text_object_list_information"
            app:layout_constraintEnd_toStartOf="@+id/image_object_folder_add"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_object_list_title" />

        <TextView
            android:id="@+id/text_object_list_information"
            style="@style/text_normal_black_14sp"
            android:layout_width="0dp"
            android:layout_marginEnd="16dp"
            android:text="坪"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_object_list"
            app:layout_constraintTop_toBottomOf="@+id/text_object_list_address" />

        <TextView
            android:id="@+id/text_object_list_square_ft"
            style="@style/text_normal_black_14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_object_list_information"
            app:layout_constraintTop_toBottomOf="@+id/text_object_list_address"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/text_object_list_rent"
            style="@style/text_normal_black_14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="15000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_object_list_square_ft"
            app:layout_constraintTop_toBottomOf="@+id/text_object_list_address"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/text_object_list_information4"
            style="@style/text_normal_black_14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="$"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_object_list_rent"
            app:layout_constraintTop_toBottomOf="@+id/text_object_list_address"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/text_object_list_tenant_name"
            style="@style/text_normal_black_14sp"
            android:layout_width="0dp"
            android:layout_marginStart="16dp"
            android:text="Jason"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_object_list_address" />

        <ImageView
            android:id="@+id/image_object_list"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ironman" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
