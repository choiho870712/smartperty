<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_repair_list_title"
            style="@style/text_normal_black_14sp"
            android:layout_width="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="text_repair_list_content"
            app:layout_constraintBottom_toTopOf="@+id/text_repair_list_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_repair_list_date"
            style="@style/text_normal_black_14sp"
            android:layout_width="0dp"
            android:layout_marginEnd="16dp"
            android:text="text_repair_list_date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_repair_list_cost2"
            app:layout_constraintStart_toStartOf="@+id/text_repair_list_status"
            app:layout_constraintTop_toBottomOf="@+id/text_repair_list_status" />

        <TextView
            android:id="@+id/text_repair_list_cost"
            style="@style/text_normal_black_14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="text_repair_list_cost"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/text_repair_list_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_repair_list_date" />

        <TextView
            android:id="@+id/text_repair_list_cost2"
            style="@style/text_normal_black_14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/moneyUnit"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/text_repair_list_date"
            app:layout_constraintEnd_toStartOf="@+id/text_repair_list_cost"
            app:layout_constraintTop_toTopOf="@+id/text_repair_list_date"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/text_repair_list_status"
            style="@style/text_normal_black_14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="text_repair_list_status"
            app:layout_constraintBottom_toTopOf="@+id/text_repair_list_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/text_repair_list_title"
            app:layout_constraintTop_toBottomOf="@+id/text_repair_list_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
