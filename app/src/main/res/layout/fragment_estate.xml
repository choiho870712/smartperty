            style="@style/text_normal_black_16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="繳交方式"
            app:layout_constraintBottom_toTopOf="@+id/text_repair_title5"
            app:layout_constraintEnd_toEndOf="@+id/text_repair_title9"
