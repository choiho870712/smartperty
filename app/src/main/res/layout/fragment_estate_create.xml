<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".landlord.menu.estate.EstateCreateFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_add_image_button"
            app:layout_constraintTop_toBottomOf="@+id/textView_estate_title" />

        <ImageView
            android:id="@+id/imageView_add_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline23"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/add_photo"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView71"
            style="@style/text_normal_black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物件名稱"
            app:layout_constraintBottom_toTopOf="@+id/textView77"
            app:layout_constraintEnd_toEndOf="@+id/textView77"
            app:layout_constraintTop_toTopOf="@+id/guideline23" />

        <EditText
            android:id="@+id/edit_create_property_name"
            style="@style/edit_text_normal_black_16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView71"
            app:layout_constraintEnd_toEndOf="@+id/button_create_property_select_region"
            app:layout_constraintStart_toStartOf="@+id/button_create_property_select_region" />

        <EditText
            android:id="@+id/edit_create_property_full_address"
            style="@style/edit_text_normal_black_16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView93"
            app:layout_constraintEnd_toEndOf="@+id/edit_create_property_floor"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edit_create_property_floor" />

        <EditText
            android:id="@+id/edit_create_property_purchase_price"
            style="@style/edit_text_normal_black_16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView99"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline19" />

        <EditText
            android:id="@+id/edit_create_property_floor"
            style="@style/edit_text_normal_black_16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView94"
            app:layout_constraintEnd_toEndOf="@+id/edit_create_property_area"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edit_create_property_area" />

        <EditText
            android:id="@+id/edit_create_property_area"
            style="@style/edit_text_normal_black_16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView95"
            app:layout_constraintEnd_toEndOf="@+id/edit_create_property_parking_space"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edit_create_property_parking_space" />

        <EditText
            android:id="@+id/edit_create_property_description"
            style="@style/edit_text_normal_black_16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView98"
            app:layout_constraintEnd_toEndOf="@+id/edit_create_property_purchase_price"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edit_create_property_purchase_price" />

        <EditText
            android:id="@+id/edit_create_property_parking_space"
            style="@style/edit_text_normal_black_16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView96"
            app:layout_constraintEnd_toEndOf="@+id/button_create_property_select_type"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/button_create_property_select_type" />

        <TextView
            android:id="@+id/textView77"
            style="@style/text_normal_black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地區"
            app:layout_constraintBottom_toTopOf="@+id/textView91"
            app:layout_constraintEnd_toEndOf="@+id/textView91"
            app:layout_constraintTop_toBottomOf="@+id/textView71" />

        <TextView
            android:id="@+id/textView91"
            style="@style/text_normal_black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路名"
            app:layout_constraintBottom_toTopOf="@+id/textView92"
            app:layout_constraintEnd_toEndOf="@+id/textView92"
            app:layout_constraintTop_toBottomOf="@+id/textView77" />

        <TextView
            android:id="@+id/textView92"
            style="@style/text_normal_black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="街名"
            app:layout_constraintBottom_toTopOf="@+id/textView93"
            app:layout_constraintEnd_toEndOf="@+id/textView93"
            app:layout_constraintTop_toBottomOf="@+id/textView91" />

        <TextView
            android:id="@+id/textView93"
            style="@style/text_normal_black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完整地址"
            app:layout_constraintBottom_toTopOf="@+id/textView94"
            app:layout_constraintEnd_toEndOf="@+id/textView94"
            app:layout_constraintTop_toBottomOf="@+id/textView92" />

        <TextView
            android:id="@+id/textView94"
            style="@style/text_normal_black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="樓層"
            app:layout_constraintBottom_toTopOf="@+id/textView95"
            app:layout_constraintEnd_toEndOf="@+id/textView95"
            app:layout_constraintTop_toBottomOf="@+id/textView93" />

        <TextView
            android:id="@+id/textView95"
            style="@style/text_normal_black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="面積"
            app:layout_constraintBottom_toTopOf="@+id/textView96"
            app:layout_constraintEnd_toEndOf="@+id/textView96"
            app:layout_constraintTop_toBottomOf="@+id/textView94" />

        <TextView
            android:id="@+id/textView96"
            style="@style/text_normal_black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="車位"
            app:layout_constraintBottom_toTopOf="@+id/textView97"
            app:layout_constraintEnd_toEndOf="@+id/textView97"
            app:layout_constraintTop_toBottomOf="@+id/textView95" />

        <TextView
            android:id="@+id/textView97"
            style="@style/text_normal_black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="型態"
            app:layout_constraintBottom_toTopOf="@+id/textView98"
            app:layout_constraintEnd_toEndOf="@+id/textView98"
            app:layout_constraintTop_toBottomOf="@+id/textView96" />

        <TextView
            android:id="@+id/textView98"
            style="@style/text_normal_black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="說明"
            app:layout_constraintBottom_toTopOf="@+id/textView99"
            app:layout_constraintEnd_toEndOf="@+id/textView99"
            app:layout_constraintTop_toBottomOf="@+id/textView97" />

        <TextView
            android:id="@+id/textView99"
            style="@style/text_normal_black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="買入價格"
            app:layout_constraintBottom_toTopOf="@+id/guideline22"
            app:layout_constraintEnd_toStartOf="@+id/guideline19"
            app:layout_constraintTop_toBottomOf="@+id/textView98" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <Button
            android:id="@+id/button_create_property_select_region"
            style="@style/button_rectangle_primary_hollow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="選擇"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView77"
            app:layout_constraintEnd_toEndOf="@+id/button_create_property_select_road"
            app:layout_constraintStart_toStartOf="@+id/button_create_property_select_road" />

        <Button
            android:id="@+id/button_create_property_select_road"
            style="@style/button_rectangle_primary_hollow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="選擇"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView91"
            app:layout_constraintEnd_toEndOf="@+id/button_create_property_select_street"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/button_create_property_select_street" />

        <Button
            android:id="@+id/button_create_property_select_street"
            style="@style/button_rectangle_primary_hollow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="選擇"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView92"
            app:layout_constraintEnd_toEndOf="@+id/edit_create_property_full_address"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edit_create_property_full_address" />

        <Button
            android:id="@+id/button_create_property_select_type"
            style="@style/button_rectangle_primary_hollow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="選擇"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView97"
            app:layout_constraintEnd_toEndOf="@+id/edit_create_property_description"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edit_create_property_description" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="780dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="80dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>