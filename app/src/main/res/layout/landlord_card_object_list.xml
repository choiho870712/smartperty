<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_object_list_title"
            style="@style/text_normal_black_16sp"
            android:layout_width="0dp"
            android:layout_marginStart="16dp"
            android:text="2樓215"
            app:layout_constraintBottom_toTopOf="@+id/text_object_list_address"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_object_list_address"
            style="@style/text_normal_black_12sp"
            android:layout_width="0dp"
            android:layout_marginStart="16dp"
            android:text="台北市大安街"
            app:layout_constraintBottom_toTopOf="@+id/text_object_list_information"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_object_list_title" />

        <TextView
            android:id="@+id/text_object_list_information"
            style="@style/text_normal_black_12sp"
            android:layout_width="0dp"
            android:layout_marginEnd="16dp"
            android:text="$15000/30坪"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/text_object_list_address" />

        <TextView
            android:id="@+id/text_object_list_tenant"
            style="@style/text_normal_black_12sp"
            android:layout_width="0dp"
            android:layout_marginStart="16dp"
            android:text="Jason"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_object_list_address" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ironman" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
