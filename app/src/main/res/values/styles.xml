<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
        <item name="homeAsUpIndicator">@drawable/ic_baseline_arrow_back_ios_24</item>
        <item name="android:editTextColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorSilver</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search_blue_24dp</item>
        <item name="closeIcon">@drawable/ic_search_blue_24dp</item>
        <item name="queryBackground">@drawable/radius_gray_text_box</item>
        <item name="goIcon">@drawable/ic_search_blue_24dp</item>
        <item name="queryHint">搜尋</item>
    </style>

    <style name="tenant_home_select_button_layout" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="tenant_home_select_button_icon" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">10</item>
    </style>

    <style name="tenant_home_select_button_text" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_notification" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="card_80dp" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="text_normal_black_16sp" parent="Theme.AppCompat.Light.DarkActionBar">
